<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ProtocoleActivities.RNF.NameRNFActivity">
    <LinearLayout
        android:id="@+id/nameRNFLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nomCampagne"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/nomRNF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_margin="@dimen/formLabelMargin"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heureDebut"
                android:textColor="#FFFFFF"/>
            <EditText
                android:id="@+id/heureDebutH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/formNombreWidth"
                android:textColor="#FFFFFF"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#FFFFFF"/>
            <EditText
                android:id="@+id/heureDebutM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/formNombreWidth"
                android:textColor="#FFFFFF"
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heureFin"
                android:textColor="#FFFFFF"/>
            <EditText
                android:id="@+id/heureFinH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/formNombreWidth"
                android:textColor="#FFFFFF"
                android:inputType="number"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="#FFFFFF"/>
            <EditText
                android:id="@+id/heureFinM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/formNombreWidth"
                android:textColor="#FFFFFF"
                android:inputType="number"/>
        </LinearLayout>
        <Button
            android:id="@+id/valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/valider"
            android:textAllCaps="false"/>
    </LinearLayout>
</ScrollView>