<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".Activities.MapsActivities.Recensement.SearchTaxonPopup">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:text="@string/layoutTitle"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />
    <com.example.eden62.GENSMobile.AutoComplete.CustomAutoCompleteView
        android:id="@+id/autoCompleteEspeceLatin"
        android:hint="@string/hintAutoCompleteLatin"
        android:textColorHint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:completionThreshold="3"/>
    <com.example.eden62.GENSMobile.AutoComplete.CustomAutoCompleteView
        android:id="@+id/autoCompleteEspeceFr"
        android:hint="@string/hintAutoCompleteFr"
        android:textColorHint="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:completionThreshold="3"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/validerRecensement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/valider"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/resetFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/reset"
            android:textAllCaps="false"/>
    </RelativeLayout>
</LinearLayout>