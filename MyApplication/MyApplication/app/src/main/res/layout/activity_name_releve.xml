<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapsActivities.Releve.NameRelevePopup"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nommerReleve"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"/>
        <TextView
            android:id="@+id/lineLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/perimeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/polygonArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/positionWGS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/positionL93"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_margin="@dimen/formLabelMargin"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/nomRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_margin="@dimen/formLabelMargin"/>
        <Button
            android:id="@+id/validerNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="@string/valider"
            android:layout_gravity="right"/>
</LinearLayout>