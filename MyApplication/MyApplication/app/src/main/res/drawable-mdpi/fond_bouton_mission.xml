<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <solid android:color="@color/boutonMissionNotPressed"
                />
            <corners
                android:bottomRightRadius="@dimen/button_border_radius"
                android:bottomLeftRadius="@dimen/button_border_radius"
                android:topLeftRadius="@dimen/button_border_radius"
                android:topRightRadius="@dimen/button_border_radius"/>
        </shape>
    </item>
    <item
        android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            >
            <solid android:color="@color/boutonMissionPressed"
                />
            <corners
                android:bottomRightRadius="@dimen/button_border_radius"
                android:bottomLeftRadius="@dimen/button_border_radius"
                android:topLeftRadius="@dimen/button_border_radius"
                android:topRightRadius="@dimen/button_border_radius"/>
        </shape>
    </item>
</selector>